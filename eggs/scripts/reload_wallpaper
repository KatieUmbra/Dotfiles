# Description: script to quickly reload the wallpaper

yolk sync
# {# wallpaper_theme() #}
THEME=rosepine
# {# wallpaper_variant() #}
VARIANT=moon
# {# wallpaper_type() #}
TYPE=weeb
swww img --transition-type wipe --transition-duration 1 "$HOME/.config/share/wallpaper/$THEME/$VARIANT/$TYPE.png"
